{
  "name": "tau",
  "version": "0.0.3",
  "description": "Front-facing projects",
  "author": "chartly",
  "license": "MIT",
  "main": "assets/src/js/bundle.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chartly/tau"
  },
  "devDependencies": {
    "beefy": "^2.1.5",
    "browserify": "^11.0.1",
    "jade": "^1.11.0",
    "jadeify": "^4.4.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.2.6",
    "rimraf": "^2.4.1",
    "stylus": "^0.51.1",
    "stylusify": "^2.0.0",
    "tsconfig-glob": "^0.1.3",
    "tsconfig-lint": "^0.1.8",
    "tslint": "^2.3.1-beta",
    "typescript": "^1.5.3",
    "watchify": "^3.3.1"
  },
  "browserify": {
    "transform": [
      [
        "jadeify",
        {
          "compileDebug": true,
          "pretty": true
        }
      ],
      [
        "stylusify"
      ]
    ],
    "extensions": [
      ".jade",
      ".styl"
    ]
  },
  "scripts": {
    "clean": "npm-run-all -p clean:js clean:js:bundle clean:static",
    "clean:js": "rimraf assets/src/js/*.js assets/src/js/*.js.map",
    "clean:js:bundle": "rimraf assets/app-bundle.js",
    "clean:static" : "rimraf assets/index.html assets/app.css",
    "prebuild": "npm run clean",
    "build": "npm-run-all -p build:ts build:styles build:markup -s build:bundle",
    "build:ts": "tsconfig . && tsc",
    "build:styles": "stylus assets/styles/app.styl -o ./assets",
    "build:markup": "jade assets/markup/index.jade -o ./assets",
    "build:bundle": "browserify assets/src/js/app.js -o assets/entry.js -v -d",
    "serve": "beefy assets/src/js/app.js 1337 --live --open --index=assets/index.html --cwd ./assets -- -o assets/entry.js -v -d",
    "lint": "tsconfig-lint ."
  }
}
