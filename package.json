{
  "name": "tau",
  "version": "0.0.1",
  "description": "",
  "author": "chartly",
  "license": "MIT",
  "main": "build/www/index.js",
  "devDependencies": {
    "hashmark": "^3.0.0",
    "http-server": "^0.8.0",
    "jade": "^1.11.0",
    "mkdirp": "^0.5.1",
    "nib": "^1.1.0",
    "opener": "^1.4.1",
    "rimraf": "^2.4.1",
    "stylus": "^0.51.1",
    "tslint": "^2.3.1-beta",
    "typescript": "^1.5.0-beta",
    "wiper": "^1.3.0"
  },
  "scripts": {
    "clean": "rimraf build/*",
    
    "prebuild": "npm run clean",
    "build": "npm run build:ts -s && npm run build:styles -s && npm run build:markup -s",
    "build:tslint":"tslint -f assets/src/ts/**.ts -t prose",
    "build:ts": "tsc",
    "build:styles": "stylus assets/styles/main.styl -m -o build/",
    "build:markup": "jade assets/markup/index.jade -o build",
    
    "open": "opener http://localhost:1337",
    
    "serve": "http-server -p 1337 build/",
    "live-reload": "ws -p 1338 -d build/",
    
    "dev": "npm run open & parallelshell \"npm run live-reload -s\" \"npm run serve\""
  }
}
