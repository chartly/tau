{
    "compilerOptions": {
        "outDir": "./assets/src/js",
        "target": "ES5",
        "module": "commonjs",
        "sourceMap": true,
        "noLib": true,
        "noImplicitAny": false,
        "removeComments": true,
        "listFiles": true,
        "watch": false
    },
    "filesGlob": [
        "assets/src/ts/**.ts",
        "assets/src/lib/**.ts"
    ],
    "files": [
        "assets/src/lib/lib.es6.d.ts",
        "assets/src/lib/node.d.ts",
        "assets/src/lib/p2.d.ts",
        "assets/src/lib/phaser.d.ts",
        "assets/src/lib/pixi.d.ts",
        "assets/src/ts/app.ts",
        "assets/src/ts/game.ts",
        "assets/src/ts/menu.ts"
    ]
}