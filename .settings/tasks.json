{
  "version": "0.1.0",
  "command": "npm",
  "windows": {
    "command": "npm.cmd"
  },
  "tasks": [
    {
      // Build task, Ctrl+Shift+B
      // "npm install --loglevel info"
      "taskName": "build",
      "args": ["run"],
      "isBuildCommand": true,
      "isWatching": true,
      "problemMatcher": "$tsc"
    },
    {
      "taskName": "lint",
      "args": ["run"]
    },
    {
      "taskName": "clean",
      "args": [ "run" ]
    },
    {
      "taskName": "serve",
      "args": [ "run" ]
    }
    
  ]
}